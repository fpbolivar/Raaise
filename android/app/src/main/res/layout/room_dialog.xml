<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_dialog_dark"
    android:backgroundTint="@color/WhiteColor"
    android:orientation="vertical"
    android:paddingBottom="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/txt_con"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toTopOf="@id/view"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/comments_count_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bottom_dialog_dark"
                        android:fontFamily="@font/noto_sans"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="Create"
                        android:textColor="@color/white"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/bottom_dialog_dark"
                        android:fontFamily="@font/noto_sans"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text=" Room"
                        android:textColor="@color/LogoGreyColor"
                        android:textSize="22sp" />


                </LinearLayout>


                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:background="@color/view_color"
                    android:layout_marginHorizontal="30dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_con" />

                <ImageView
                    android:id="@+id/imageClose"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="8dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/back_arrow_white"
                    app:layout_constraintBottom_toTopOf="@id/view"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/white" />

                <LinearLayout
                    android:id="@+id/scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toTopOf="@id/create_room_btn"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/room_name_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/curved_dark_grey_background"
                            android:hint="Room Name"
                            android:padding="12dp"
                            android:paddingStart="18dp"
                            android:textColor="@color/light_grey"
                            android:textColorHint="@color/light_white"
                            android:textSize="14sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <EditText
                            android:id="@+id/room_desc_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="30dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/curved_dark_grey_background"
                            android:hint="Room Description"
                            android:padding="12dp"
                            android:paddingStart="18dp"
                            android:textColor="@color/light_grey"
                            android:textColorHint="@color/light_white"
                            android:textSize="14sp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/room_name_et" />

                        <LinearLayout
                            android:id="@+id/con"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="start"
                            android:orientation="vertical"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/room_desc_et">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="30dp"
                                android:layout_marginTop="16dp"
                                android:background="@drawable/curved_dark_grey_background"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/room_type_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="10dp"
                                    android:layout_marginStart="20dp"
                                    android:fontFamily="@font/noto_sans"
                                    android:gravity="center_vertical"
                                    android:padding="1dp"
                                    android:text="Public"
                                    android:textColor="@color/DullWhite"

                                    android:textSize="14sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/room_type_switch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="20dp"
                                    android:adjustViewBounds="true"
                                    android:thumb="@drawable/thumb"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:track="@drawable/track" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="30dp"
                                android:layout_marginTop="16dp"
                                android:background="@drawable/curved_dark_grey_background"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/room_timing_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="10dp"
                                    android:layout_marginStart="20dp"
                                    android:fontFamily="@font/noto_sans"
                                    android:gravity="center_vertical"
                                    android:padding="1dp"
                                    android:text="Go Live Now"
                                    android:textColor="@color/DullWhite"

                                    android:textSize="14sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <androidx.appcompat.widget.SwitchCompat
                                    android:id="@+id/room_timing_switch"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="20dp"
                                    android:adjustViewBounds="true"
                                    android:thumb="@drawable/thumb"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:track="@drawable/track" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <LinearLayout
                                android:id="@+id/date_time_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="30dp"
                                android:layout_marginTop="16dp"
                                android:background="@drawable/curved_dark_grey_background"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:paddingStart="2dp"
                                    android:paddingEnd="2dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:paddingTop="8dp"
                                        android:paddingBottom="6dp"
                                        android:text="Date"
                                        android:textColor="@color/DullWhite"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/schedule_date_tv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@null"
                                        android:drawableEnd="@drawable/calender"
                                        android:drawableTint="@color/grey"
                                        android:gravity="center"
                                        android:hint="Select Date"
                                        android:paddingTop="6dp"
                                        android:paddingBottom="8dp"
                                        android:textColor="@color/DullWhite"
                                        android:textColorHint="@color/grey"
                                        android:textSize="14sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:paddingStart="2dp"
                                    android:paddingEnd="2dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:paddingTop="8dp"
                                        android:paddingBottom="6dp"
                                        android:text="Time"
                                        android:textColor="@color/DullWhite"
                                        android:textSize="14sp" />

                                    <TextView
                                        android:id="@+id/schedule_time_tv"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@null"
                                        android:drawableEnd="@drawable/clock"
                                        android:drawableTint="@color/grey"
                                        android:gravity="center"
                                        android:hint="Select Time"
                                        android:paddingTop="6dp"
                                        android:paddingBottom="8dp"
                                        android:textColor="@color/DullWhite"
                                        android:textColorHint="@color/grey"
                                        android:textSize="14sp" />

                                </LinearLayout>

                            </LinearLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginHorizontal="30dp"
                                android:layout_marginTop="16dp"
                                android:background="@drawable/curved_dark_grey_background"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/search_user_et"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="10dp"
                                    android:layout_marginStart="20dp"
                                    android:layout_marginEnd="40dp"
                                    android:background="@color/Transparent"
                                    android:fontFamily="@font/noto_sans"
                                    android:gravity="center_vertical"
                                    android:hint="Search Users"
                                    android:padding="1dp"
                                    android:textColor="@color/DullWhite"
                                    android:textColorHint="@color/light_white"

                                    android:textSize="14sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"

                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                            </androidx.constraintlayout.widget.ConstraintLayout>


                            <androidx.cardview.widget.CardView
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="12dp"
                                android:layout_marginBottom="6dp"
                                android:visibility="gone"
                                app:cardCornerRadius="12dp">

                                <ImageView
                                    android:id="@+id/room_logo"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/splash_logo" />

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/choose_room_logo_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="4dp"
                                android:text="Choose Room Logo"
                                android:textColor="@color/BlueColorSettings"
                                android:textSize="14sp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/selected_users_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="30dp"
                                android:layout_marginTop="12dp"
                                android:text="Selected Users"
                                android:textColor="@color/BlueColorSettings"
                                android:textSize="14sp"
                                android:visibility="gone" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/selected_users_rv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="30dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="8dp"
                                android:background="@color/black"
                                android:backgroundTint="@color/black"
                                app:layout_constraintBottom_toTopOf="@id/selected_users_rv"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/room_name_et"
                                tools:listitem="@layout/select_user_item" />

                            <TextView
                                android:id="@+id/select_users_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="30dp"
                                android:layout_marginTop="8dp"
                                android:text="Select Users"
                                android:textColor="@color/BlueColorSettings"
                                android:textSize="14sp" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/select_users_rv"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginHorizontal="30dp"
                                android:layout_marginTop="8dp"
                                android:layout_weight="1"
                                android:background="@color/black"
                                android:backgroundTint="@color/black"
                                android:maxHeight="0dp"
                                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                                app:layout_constraintBottom_toTopOf="@id/create_room_btn"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/selected_users_rv"
                                tools:listitem="@layout/selected_user_item" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


                <TextView
                    android:id="@+id/create_room_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/button_shape_login"
                    android:gravity="center"
                    android:padding="12dp"
                    android:paddingStart="12dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="6dp"
                    android:text="Create Room"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/scroll" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>