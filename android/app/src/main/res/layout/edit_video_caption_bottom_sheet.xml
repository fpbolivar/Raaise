<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/black">

    <LinearLayout
        android:id="@+id/heading"
        android:backgroundTint="@color/black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bottomdialog_bg"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:textColor="@color/white"
            android:text="Edit Video"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/backBtn_InEditVideo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="20dp"
        android:src="@drawable/back_arrow_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/heading" />

    <TextView
        android:id="@+id/new_post_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="@string/edit_caption"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/backBtn_InEditVideo"
        app:layout_constraintTop_toBottomOf="@id/backBtn_InEditVideo" />

    <ImageView
        android:id="@+id/video_thumbnail_InEditCaption"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="@id/new_post_heading"
        app:layout_constraintTop_toBottomOf="@id/new_post_heading" />

    <EditText
        android:id="@+id/desc_edit_text_InEditCaption"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/curved_dark_grey_background"
        android:gravity="start"
        android:hint="Add Description"
        android:textColor="@color/white"
        android:padding="12dp"
        android:textSize="12sp"
        android:textColorHint="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="@id/video_thumbnail_InEditCaption"
        app:layout_constraintLeft_toRightOf="@id/video_thumbnail_InEditCaption"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/video_thumbnail_InEditCaption" />




    <androidx.cardview.widget.CardView
        android:id="@+id/submitVideoBtn_InEditCaption"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@+id/desc_edit_text_InEditCaption"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/LogoGreyColor"
        app:cardCornerRadius="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="8dp"
            android:fontFamily="@font/noto_sans"
            android:gravity="center"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>