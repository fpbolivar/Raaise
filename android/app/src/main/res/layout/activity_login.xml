<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Activity.Credentials.Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WhiteColor"
        >

        <ImageView
            android:id="@+id/LogoInLogin"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:adjustViewBounds="true"
            android:src="@drawable/splash_logo" />

        <EditText
            android:id="@+id/EmailEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/LogoInLogin"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/edit_text_shape"
            android:hint="Email or username"
            android:textColor="@color/black"
            android:textColorHint="@color/hintGreyColor"
            android:inputType="textEmailAddress"
            android:paddingStart="20dp" />

        <EditText
            android:textColor="@color/black"
            android:id="@+id/PasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/EmailEditText"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_shape"
            android:hint="Password"
            android:textColorHint="@color/hintGreyColor"
            android:inputType="textPassword"
            android:paddingStart="20dp" />

        <LinearLayout
            android:id="@+id/LoginButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/PasswordEditText"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_shape_login"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="Login"
                android:textColor="@color/WhiteColor"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/ForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LoginButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/noto_sans"
            android:text="Forget Password?"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/OrContinueLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ForgetPassword"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/GreyColor" />

            <TextView
                android:id="@+id/OrContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/View1"
                android:layout_weight="1"
                android:gravity="center"
                android:fontFamily="@font/noto_sans"
                android:text="Or continue with"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@color/GreyColor" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/FacebookButton"
            android:background="@drawable/stroke_background"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="50dp"
            android:gravity="center|center_vertical"
            android:layout_below="@+id/OrContinueLayout">
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/facebook" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="Continue With Facebook"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/GoogleButton"
            android:background="@drawable/stroke_background"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center|center_vertical"
            android:layout_below="@+id/FacebookButton">
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/google" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="Continue With Google"
                android:textColor="@color/black"
                android:textSize="15dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/GoogleButton"
            android:layout_marginTop="90dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="You Donâ€™t have an account ?"
                android:textColor="@color/black"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/DoSignUpButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="SignUp"
                android:textColor="@color/design_default_color_error"
                android:textSize="15dp" />
        </LinearLayout>


    </RelativeLayout>


</ScrollView>

