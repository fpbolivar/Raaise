<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chat_ScreenActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/BackInSignUp"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/backarrow" />

        <ImageView
            android:id="@+id/iv_videoCall"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/svg_video_call" />

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/toolbar">

        <ImageView
            android:id="@+id/User_Profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/chatting_girl"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardView_profile"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="@string/Username1"
        android:textColor="@color/black"
        android:textSize="20dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/cardView_profile"
        android:layout_toRightOf="@id/tv_user_name"
        android:src="@drawable/svg_checkamount"/>

    <TextView
        android:id="@+id/title_donation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_user_name"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:text="Total Donation"
        android:textColor="#1C1C1C"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/tv_donation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_donation"
        android:text="$ 115"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_donation"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:textAlignment="center"
        android:textSize="12sp"
        android:text="@string/chat_title"
        android:textColor="#797979"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatting_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view"
        android:layout_below="@id/status"
        android:layout_marginHorizontal="20dp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/GreyColor"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/layoutsend"/>

    <RelativeLayout
        android:id="@+id/layoutsend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_toLeftOf="@+id/iv_send_icon"
            android:hint="Message....."
            android:textSize="18dp"/>
        <ImageView
            android:id="@+id/iv_send_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/svg_sendbutton"/>

    </RelativeLayout>


</RelativeLayout>