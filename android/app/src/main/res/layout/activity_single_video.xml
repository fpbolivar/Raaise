            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="@id/ShareVideo1"
            app:layout_constraintRight_toLeftOf="@id/ShareVideo1"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/more_options_btns"
            android:visibility="gone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/cardName"
        android:layout_marginTop="@dimen/_10sdp">

        <RelativeLayout
            android:id="@+id/relativeEye"
            android:layout_width="wrap_content"
            android:background="@drawable/bg_for_likes"
            android:paddingVertical="@dimen/_3sdp"
            android:paddingHorizontal="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/eye_image"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:src="@drawable/eye_icon"/>

            <TextView
                android:id="@+id/eyeCount"
                android:layout_width="wrap_content"
