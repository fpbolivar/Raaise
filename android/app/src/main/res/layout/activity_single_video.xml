        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/profile_bg_cir">


            <LinearLayout
                android:id="@+id/profileContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_9sdp"
                android:paddingHorizontal="@dimen/_5sdp"
                android:gravity="center_vertical"
                app:layout_constraintLeft_toLeftOf="parent">

                <RelativeLayout
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_34sdp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        app:cardCornerRadius="@dimen/_100sdp">

                        <ImageView
                            android:id="@+id/ImageProfileInAdapter1"
                            android:layout_width="@dimen/_28sdp"
                            android:layout_height="@dimen/_28sdp"
                            android:background="@drawable/circular_shape"
                            android:scaleType="centerCrop"
                            />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/verficationCardView"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:visibility="gone"
                        android:backgroundTint="@color/Transparent"
                        android:background="@color/Transparent"
                        android:layout_marginBottom="5dp"
                        app:cardBackgroundColor="@color/Transparent"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true">
                        <ImageView
                            android:id="@+id/verfication_icon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/verification_badge_white" />

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/NameInHomeVideoSingleItem1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_2sdp"
                                android:fontFamily="@font/noto_sans"
                                android:maxWidth="@dimen/_180sdp"
                                android:textColor="@color/white"
                                android:textFontWeight="400"
                                android:textSize="@dimen/_13ssp" />


                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/FollowButtonInHomeVideoSingleItem1"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:background="@drawable/circular_gradient_bg"
                            app:cardCornerRadius="@dimen/_40sdp">

                            <TextView
                                android:id="@+id/FollowTextInHomeVideoSingleItem1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_gravity="center_vertical"
                                android:layout_marginHorizontal="10dp"
                                android:fontFamily="@font/noto_sans"
                                android:textColor="@color/white"
                                android:textFontWeight="300"
                                android:textSize="@dimen/_9ssp" />
                        </RelativeLayout>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/SongLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:visibility="gone"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <RelativeLayout
                    android:id="@+id/AudioItem"
                    android:layout_width="@dimen/_23sdp"
                    android:layout_height="@dimen/_23sdp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/user_image_bg">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="@dimen/_50sdp">

                        <ImageView
                            android:id="@+id/SongImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            />
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/lottie_main"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/svg_music_sign_whitecolor" />

                <TextView
                    android:id="@+id/SongNameInHomeVideoSingleItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/noto_sans"
                    android:maxWidth="200dp"
                    android:text="Dummy"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/ShareVideo1"
            android:layout_width="@dimen/_18sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="@dimen/_18sdp"
            android:src="@drawable/share_icon" />

        <ImageView
            android:id="@+id/more_options_btn"
            android:layout_width="@dimen/_15sdp"
            android:rotation="90"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="@id/ShareVideo"
            app:layout_constraintRight_toLeftOf="@id/ShareVideo"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/more_options_btns" />

        <ImageView
            android:id="@+id/more_options_btn_UP"
            android:layout_width="@dimen/_15sdp"
            app:layout_constraintRight_toRightOf="@+id/ShareVideo1"
