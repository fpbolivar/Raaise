                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/noto_sans"
                android:maxWidth="200dp"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/more_options_btn_UP1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:rotation="90"
        android:src="@drawable/more_options_btns"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/SidePanel1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/DollarDonation1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:visibility="gone"
                android:src="@drawable/donation_in_single" />

            <TextView
                android:id="@+id/DonationAmount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donation"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textFontWeight="300"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/heart_in_single" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textFontWeight="300"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"

                android:src="@drawable/comment_in_single" />

            <TextView
                android:id="@+id/CommentCountInHomeVideoSingleItem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textFontWeight="300"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/send_in_single" />

            <TextView
                android:id="@+id/VideoShareCountInHomeVideoSingleItem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textFontWeight="300"
                android:textSize="12dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/try_audio_btn1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:src="@drawable/camera_in_singel"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/more_options_btn1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:visibility="gone"
            android:src="@drawable/more_options_btns" />

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/Lottie_Heart1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:visibility="gone"
        app:lottie_rawRes="@raw/heart_json" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/Lottie_PausePlay1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:visibility="gone"
        app:lottie_speed="3" />


<!--    new Design-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardName"
