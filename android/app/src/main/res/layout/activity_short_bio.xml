<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Settings.MyAccount.ShortBio">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WhiteColor">

        <ImageView
            android:id="@+id/BackInSignUp"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:adjustViewBounds="true"
            android:src="@drawable/backarrow"
            app:tint="@color/white" />

        <LinearLayout
            android:id="@+id/TextInForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BackInSignUp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="17dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="Short "
                android:textColor="@color/TextColor"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="Bio"
                android:textColor="@color/LogoGreyColor"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/Text1InForgetPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextInForgetPassword"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/noto_sans"
            android:text="A short bio which described you and help the other users to check you \nopinions."
            android:textColor="@color/light_grey"
            android:textSize="9sp" />

        <EditText
            android:id="@+id/ShortBioEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Text1InForgetPassword"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/curved_dark_grey_background"
            android:gravity="start"
            android:hint="Tell us something about yourself"
            android:lines="2"
            android:maxLength="45"
            android:maxLines="3"
            android:padding="10dp"
            android:paddingHorizontal="20dp"
            android:textColor="@color/light_grey"
            android:textColorHint="#BFBFC1"
            android:textFontWeight="300"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/count_msg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ShortBioEditText"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="5dp"
            android:text="0 / 45"
            android:textColor="#BFBFC1"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/ShortBioSaveButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/ShortBioEditText"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/button_shape_login"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>


</ScrollView>