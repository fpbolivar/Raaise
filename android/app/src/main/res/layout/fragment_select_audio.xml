<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="22dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/backarrow"/>

    <TextView
        android:id="@+id/select_all_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/backBtn"
        app:layout_constraintBottom_toBottomOf="@id/backBtn"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="22dp"
        android:text="@string/select_all"
        android:textSize="18sp"
        android:textColor="@color/black"/>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/selectAllCHeckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:buttonTint="#C90202"
        app:layout_constraintTop_toTopOf="@id/select_all_text"
        app:layout_constraintBottom_toBottomOf="@id/select_all_text"
        app:layout_constraintRight_toLeftOf="@id/select_all_text"/>

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view"
        style="@style/SearchViewStyle"
        app:layout_constraintLeft_toLeftOf="@id/backBtn"
        app:layout_constraintRight_toRightOf="@id/select_all_text"
        app:layout_constraintTop_toBottomOf="@id/select_all_text"
        android:layout_marginTop="20dp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:queryBackground="@android:color/transparent"
        android:background="@drawable/paymentmethod_edittext"
        android:queryHint="hint"
        app:defaultQueryHint="hint"
        app:iconifiedByDefault="false"
        app:queryHint="Search Users" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/audioRV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:listitem="@layout/select_audio_layout"
        app:layout_constraintLeft_toLeftOf="@id/search_view"
        app:layout_constraintRight_toRightOf="@id/search_view"
        app:layout_constraintTop_toBottomOf="@id/search_view"
        app:layout_constraintBottom_toTopOf="@id/submit_btn"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/submit_btn"
        android:layout_width="0dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/backBtn"
        app:layout_constraintRight_toRightOf="@id/select_all_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_horizontal"
        android:layout_marginBottom="18dp"
        android:backgroundTint="@color/design_default_color_error">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Submit"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:padding="14dp"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>