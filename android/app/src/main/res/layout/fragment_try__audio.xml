<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home.Fragments.Try_AudioFragment">

    <ImageView
        android:id="@+id/BackInSignUp"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:adjustViewBounds="true"
        android:src="@drawable/backarrow"
        app:tint="@color/white" />


    <androidx.cardview.widget.CardView
        android:id="@+id/music_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="29dp"
        app:cardCornerRadius="50dp"
        android:layout_below="@id/BackInSignUp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/delete_it"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BackInSignUp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        android:layout_toRightOf="@+id/music_img"
        android:drawableLeft="@drawable/svg_music_sign"
        android:drawablePadding="5dp"
        android:drawableTint="@color/white"
        android:fontFamily="@font/noto_sans"
        android:text="Take Me Home"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/use_music_Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/music_name"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@+id/music_img"
        android:textSize="10sp"
        android:text="@string/Username"
        android:textColor="@color/white" />


    <LinearLayout
        android:id="@+id/layout_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/use_music_Username"
        android:layout_toRightOf="@+id/music_img"
        android:layout_marginStart="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_play_btn"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:scaleType="fitXY"
            app:tint="@color/white"
            android:src="@drawable/ic_play_arrow"/>

        <SeekBar
            android:id="@+id/music_process"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:tickMarkTint="@color/white"
            android:progressBackgroundTint="@color/white"
            android:thumbTint="@color/white"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/music_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:textColor="@color/white"
            android:text="00:30"/>

    </LinearLayout>

    <TextView
        android:id="@+id/btn_Save_Audio"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="25dp"
        android:background="@drawable/bg_save_audio"
        android:text="Save Audio"
        android:textStyle="bold"
        android:fontFamily="@font/noto_sans"
        android:gravity="center_vertical|center_horizontal"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="@color/save_audio_textcolor"
        android:layout_below="@id/layout_music"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/using_music_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:visibility="gone"
        android:layout_below="@id/btn_Save_Audio"/>

    <!--    Image View Set as a Design Purpose-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_Save_Audio"
        android:scaleType="fitXY"
        android:layout_marginTop="30dp"
        android:adjustViewBounds="true"
        android:src="@drawable/delete" />


    <RelativeLayout
        android:id="@+id/layout_audio_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_try_audio_btn"
        android:layout_marginHorizontal="130dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_audio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/svg_redplay_btn"
            android:drawablePadding="5dp"
            android:drawableTint="@color/LogoGreyColor"
            android:fontFamily="@font/noto_sans"
            android:text="Try Audio"
            android:textColor="@color/LogoGreyColor" />

    </RelativeLayout>

</RelativeLayout>