<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Activity.Credentials.ForgetPasswordFragments.VerifyOtpFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WhiteColor">

        <ImageView

            android:id="@+id/BackInEnterOtp"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            android:adjustViewBounds="true"
            android:src="@drawable/backarrow"
            app:tint="@color/white" />

        <LinearLayout
            android:id="@+id/TextInForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BackInEnterOtp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="17dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="OTP"
                android:textColor="@color/TextColor"
                android:textSize="18sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/CodeSentToText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextInForgetPassword"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/noto_sans"
            android:text="@string/title_otp"
            android:textColor="@color/hintGreyColor"
            android:textSize="11sp" />

        <EditText
            android:id="@+id/OtpEditTextInVerifyOtp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/CodeSentToText"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/curved_dark_grey_background"
            android:cursorVisible="false"
            android:digits="1234567890"
            android:hint="Enter OTP"
            android:inputType="number"
            android:maxLength="4"
            android:paddingHorizontal="20dp"
            android:textColor="@color/light_grey"
            android:textColorHint="@color/light_grey"
            android:textIsSelectable="false"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/SubmitInVerifyOtp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/OtpEditTextInVerifyOtp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_shape_login"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>


    </RelativeLayout>
</ScrollView>