<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/WhiteColor"
    tools:context=".Activity.credentials.SignUp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WhiteColor">

        <ImageView
            android:id="@+id/BackInSignUp"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:adjustViewBounds="true"
            android:src="@drawable/backarrow"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/LogoInSignUp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:adjustViewBounds="true"
            android:src="@drawable/splash_logo" />

        <TextView
            android:id="@+id/signUpTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_below="@+id/LogoInSignUp"
            android:fontFamily="@font/noto_sans"
            android:text="Sign up"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="10dp"
            android:textColor="@color/white"
            android:textSize="22sp" />

<!--        <LinearLayout-->
<!--            android:id="@+id/TextInSignup"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_below="@+id/signUpTitle"-->
<!--            android:layout_marginStart="40dp"-->
<!--            android:layout_marginTop="30dp">-->

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:fontFamily="@font/noto_sans"-->
<!--                android:text="Sign Up for "-->
<!--                android:textColor="@color/TextColor"-->
<!--                android:textSize="18sp" />-->

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:fontFamily="@font/noto_sans"-->
<!--                android:text="Raaise"-->
<!--                android:textColor="@color/new_textcolor"-->
<!--                android:textSize="18sp" />-->
<!--        </LinearLayout>-->

        <LinearLayout
            android:id="@+id/EditTextLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signUpTitle"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/NameEditTextInSignUp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/EmailEditText"
                android:layout_marginHorizontal="20dp"
                android:drawableLeft="@drawable/name_icon"
                android:drawableTint="@color/icon_white"
                android:drawablePadding="@dimen/_15sdp"
                android:layout_marginTop="15dp"
                android:background="@drawable/curved_dark_grey_background"
                android:hint="Name"
                android:inputType="textPersonName"
                android:paddingHorizontal="12dp"
                android:textColor="@color/light_grey"
                android:textColorHint="@color/light_white"
                android:textCursorDrawable="@drawable/cursor_drawable"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/UserNameEditTextInSignUp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/EmailEditText"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/username_icon"
                android:drawableTint="@color/icon_white"
                android:drawablePadding="@dimen/_15sdp"
                android:background="@drawable/curved_dark_grey_background"
                android:hint="Username"
                android:inputType="text"
                android:paddingHorizontal="12dp"
                android:textColor="@color/light_grey"
                android:textColorHint="@color/light_white"
                android:textCursorDrawable="@drawable/cursor_drawable"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/EmailEditTextInSignUp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/EmailEditText"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/email_signup"
                android:drawableTint="@color/icon_white"
                android:drawablePadding="@dimen/_15sdp"
                android:background="@drawable/curved_dark_grey_background"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="12dp"
                android:textColor="@color/light_grey"
                android:textColorHint="@color/light_white"
                android:textCursorDrawable="@drawable/cursor_drawable"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/PhoneNumberEditTextInSignUp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/EmailEditText"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/phone_icon"
                android:drawableTint="@color/icon_white"
                android:drawablePadding="@dimen/_15sdp"
                android:background="@drawable/curved_dark_grey_background"
                android:hint="Phone Number (optional)"
                android:maxLength="10"
                android:inputType="phone"
                android:paddingHorizontal="12dp"
                android:textColor="@color/light_grey"
                android:textColorHint="@color/light_white"
                android:textCursorDrawable="@drawable/cursor_drawable"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordInputLayoutInLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                app:startIconDrawable="@drawable/pass_icon"
                app:startIconTint="@color/icon_white"
                android:textColor="@color/black"
                android:textColorHint="@color/TextColor1"
                android:textCursorDrawable="@drawable/cursor_drawable"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/white"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/PasswordEditTextInSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curved_dark_grey_background"
                    android:hint="Password"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:padding="15dp"
                    android:textColorHint="@color/light_white"

                    android:singleLine="true"
                    android:textColor="@color/light_grey"
                    android:textCursorDrawable="@drawable/cursor_drawable"
                    android:textSize="14sp"
                    app:endIconTint="@color/black"

                    />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:textColorHint="@color/TextColor1"
                android:textCursorDrawable="@drawable/cursor_drawable"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                app:endIconMode="password_toggle"
                app:endIconTint="@color/white"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false"
                app:startIconDrawable="@drawable/pass_icon"
                app:startIconTint="@color/icon_white"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ConfirmPasswordEditTextInSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curved_dark_grey_background"
                    android:hint="Confirm Password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textColorHint="@color/light_white"
                    android:textColor="@color/light_grey"
                    android:textCursorDrawable="@drawable/cursor_drawable"
                    android:textSize="14sp"
                    app:endIconTint="@color/black" />

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp">

                <CheckBox
                    android:id="@+id/termsCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:buttonTint="@color/white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/termsTextView"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/termsCheckBox"
                    android:layout_marginStart="4dp"
                    android:textSize="14sp"
                    android:textColor="@color/light_grey"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/SignUpButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/EditTextLayout"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape_login"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="Sign Up"
                android:textColor="@color/white"
                android:textFontWeight="300"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/OrContinueLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SignUpButton"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@color/light_white" />

            <TextView
                android:id="@+id/OrContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/View1"
                android:layout_weight="1"
                android:fontFamily="@font/noto_sans"
                android:gravity="center"
                android:text="OR"
                android:textColor="@color/light_white"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@color/light_white" />
        </LinearLayout>

        <TextView
            android:id="@+id/continueTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_below="@+id/OrContinueLayout"
            android:fontFamily="@font/noto_sans"
            android:text="Continue with"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:paddingHorizontal="10dp"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/layoutContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/continueTitle"
            android:layout_marginHorizontal="@dimen/_70sdp"
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:gravity="center|center_horizontal">

            <LinearLayout
                android:id="@+id/GoogleButtonInSignUp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_weight="1"
                android:background="@drawable/stroke_bg_fb"
                android:gravity="center|center_vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/svg_google" />

                <!--            <TextView-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_marginStart="15dp"-->
                <!--                android:fontFamily="@font/noto_sans"-->
                <!--                android:text="Continue with Google     "-->
                <!--                android:textColor="@color/white"-->
                <!--                android:textSize="14sp" />-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/FacebookButtonInSignUp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="@dimen/_18sdp"
                android:layout_weight="1"
                android:background="@drawable/stroke_bg_fb"
                android:gravity="center|center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/svg_facebook" />

                <!--            <TextView-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_marginStart="15dp"-->
                <!--                android:fontFamily="@font/noto_sans"-->
                <!--                android:text="Continue with Facebook"-->
                <!--                android:textColor="@color/white"-->
                <!--                android:textSize="14sp" />-->

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layoutContinue"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="Already have an account? "
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/SignInInSignupButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="Login"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:textSize="12sp" />
        </LinearLayout>


    </RelativeLayout>

</ScrollView>