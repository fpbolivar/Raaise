<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/MainFollowListElement"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardViewOfImageOnFF"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="100dp">

        <ImageView
            android:id="@+id/imageViewInFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@+id/CardViewOfImageOnFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/NameInFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:text="Maninder"
            android:textColor="@color/white"
            android:textSize="15sp" />



        <TextView
            android:id="@+id/FollowrCountInFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:text="20K following"
            android:textColor="@color/low_light_grey"
            android:textSize="10sp" />
    </LinearLayout>

</RelativeLayout>