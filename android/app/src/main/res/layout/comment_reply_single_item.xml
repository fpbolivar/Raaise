<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginStart="5dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="100dp">

        <ImageView
            android:id="@+id/commentatorReplyImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
             />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/NameCommentReply"
        app:layout_constraintTop_toTopOf="@id/card_view"
        app:layout_constraintLeft_toRightOf="@id/card_view"
        android:layout_marginStart="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:fontFamily="@font/noto_sans"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/time"
        app:layout_constraintTop_toTopOf="@id/NameCommentReply"
        app:layout_constraintLeft_toRightOf="@id/NameCommentReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:fontFamily="@font/noto_sans"
        android:maxLines="2"
        android:textColor="@color/DullWhite"
        android:textFontWeight="300"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/CommentReply"
        app:layout_constraintLeft_toLeftOf="@id/NameCommentReply"
        app:layout_constraintTop_toBottomOf="@id/NameCommentReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto_sans"
        android:textColor="@color/DullWhite"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/more_options"
        android:visibility="invisible"
        android:layout_width="16dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/NameCommentReply"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="10dp"
        android:rotation="90"
        android:layout_marginVertical="4dp"
        android:src="@drawable/more_options_btns"
        app:tint="@color/light_grey" />

</androidx.constraintlayout.widget.ConstraintLayout>