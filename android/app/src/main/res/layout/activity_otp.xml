<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true"
    android:padding="40dp"
    tools:context=".OtpActivity">

    <ImageView
        android:id="@+id/BackInSignUp"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:src="@drawable/backarrow"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BackInSignUp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/noto_sans"
        android:text="OTP"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="10dp"
        android:text="Code has been send on your email s*******9@gmail.com"
        android:textColor="@color/white"
        android:textSize="10sp" />


    <LinearLayout
        android:id="@+id/layout_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sub_title"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/first_otpNo"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@drawable/curved_dark_grey_background"
            android:gravity="center"
            android:hint="8"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:maxLength="1"
            android:nextFocusForward="@id/second_otpNo"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/light_grey"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/second_otpNo"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/curved_dark_grey_background"
            android:gravity="center"
            android:hint="8"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:maxLength="1"
            android:nextFocusForward="@id/third_otpNo"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/light_grey"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/third_otpNo"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/curved_dark_grey_background"
            android:gravity="center"
            android:hint="8"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:maxLength="1"
            android:nextFocusForward="@id/fourth_otpNo"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/light_grey"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/fourth_otpNo"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@drawable/curved_dark_grey_background"
            android:gravity="center"
            android:hint="8"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:maxLength="1"
            android:nextFocusForward="@id/submit_Button"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/light_grey"
            android:textSize="14sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/submit_Button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/layout_otp"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_shape_login"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>