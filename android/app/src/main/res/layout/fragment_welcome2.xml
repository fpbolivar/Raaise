<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Activity.Introduction.Welcome2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WhiteColor"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="90dp"
            android:layout_marginTop="90dp"
            android:adjustViewBounds="true"
            android:src="@drawable/introduction_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/noto_sans"
                android:text="Get Inspiration \nFor Your Next"
                android:textColor="@color/TextColor"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"

                android:fontFamily="@font/noto_sans"
                android:gravity="bottom"
                android:text="Clip."
                android:textColor="@color/LogoGreyColor"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/noto_sans"
            android:gravity="bottom"
            android:text="The worlds first Personal Security tool powered by Artificial Intelligence"
            android:textColor="#C3C3C3"
            android:textSize="12sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"

                android:layout_marginBottom="90dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="40dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/loadinintroduction"
                    app:tint="@color/LogoGreyColor" />

                <ImageView
                    android:id="@+id/NextInIntroduction2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="40dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/next_button_introduction"
                    app:tint="@color/LogoGreyColor" />
            </RelativeLayout>
        </RelativeLayout>

        <!--        <TextView-->
        <!--            android:layout_marginHorizontal="10dp"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:textSize="25dp"-->
        <!--            android:textStyle="bold"-->
        <!--            android:layout_marginTop="40dp"-->
        <!--            android:layout_marginStart="40dp"-->
        <!--            android:text="Get Inspiration \n For Your Next"-->
        <!--            android:textColor="@color/TextColor" />-->

    </LinearLayout>


</ScrollView>