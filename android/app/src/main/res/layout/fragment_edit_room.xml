<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WhiteColor">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:adjustViewBounds="true"
            android:src="@drawable/backarrow"
            app:tint="@color/white" />

        <LinearLayout
            android:id="@+id/edit_room_container"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/backBtn"
            android:layout_marginTop="17dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="Edit "
                android:textColor="@color/TextColor"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="Room"
                android:textColor="@color/LogoGreyColor"
                android:textSize="18sp" />
        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/room_logo_iv"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@id/edit_room_container"
            android:layout_marginTop="12dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:cardCornerRadius="140dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/room_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/change_room_logo_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="-10dp"
                android:src="@drawable/camera_svg"
                app:fabSize="mini"
                app:layout_constraintEnd_toEndOf="@+id/cardView"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@android:color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/room_name_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/room_logo_iv"
            android:layout_marginStart="30dp"
            android:text="Room Title"
            android:textColor="@color/BlueColorSettings"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/room_name_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/room_name_head"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/curved_dark_grey_background"
            android:hint="Room Name"
            android:inputType="textPersonName"
            android:paddingHorizontal="20dp"
            android:textColor="@color/light_grey"
            android:textColorHint="@color/Darkgrey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/room_desc_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/room_name_et"
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:text="Room Description"
            android:textColor="@color/BlueColorSettings"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/room_desc_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/room_desc_head"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/curved_dark_grey_background"
            android:clickable="false"
            android:hint="Room Description"
            android:inputType="textNoSuggestions"
            android:paddingHorizontal="10dp"
            android:textColor="@color/light_grey"
            android:textColorHint="@color/Darkgrey"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/update_room_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/room_desc_et"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_shape_login"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="Update"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>


    </RelativeLayout>


</ScrollView>