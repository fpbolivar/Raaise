<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteColor"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".Home.Fragments.OtherUserProfileActivity">
    <!--*************   Top Bar    *************-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/BackInOtherUserProfile"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/backarrow"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/settingHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto_sans"
            android:text="Profile"
            android:layout_marginTop="@dimen/_5sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/BackInOtherUserProfile"
            app:layout_constraintLeft_toRightOf="@id/BackInOtherUserProfile"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
        
        <ImageView
            android:id="@+id/more_options"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_10sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/BackInOtherUserProfile"
            app:layout_constraintBottom_toBottomOf="@id/BackInOtherUserProfile"
            android:layout_marginEnd="20dp"
            android:src="@drawable/more_options_btns"
            android:rotation="90"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:background="#66AF00FD"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/Settings_In_Profile"
        android:layout_height=".5dp"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginHorizontal="20dp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/CoverImageInOtherUserProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:adjustViewBounds="true"
                        android:background="@color/WhiteColor"
                        android:src="@drawable/cover_image_1"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>

                <!--*************   Profile Image    *************-->

                <androidx.cardview.widget.CardView
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginLeft="30dp"
                    android:layout_alignParentBottom="true"
                    android:backgroundTint="@color/WhiteColor"
                    app:cardCornerRadius="1000dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="1000dp"
                        android:background="@drawable/settings_block_bg"
                        android:padding="@dimen/_10sdp"  >

                        <ImageView
                            android:id="@+id/ProfileImageInOtherUserProfile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:background="@color/black"
                            android:scaleType="centerCrop"
                            android:src="@drawable/placeholder" />

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <!--*************   Name With Badge    *************-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/UserNameInProfileInOtherUserProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/noto_sans"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/Verification_BadgeInOtherUserProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/verification_badge"
                    android:visibility="gone" />
            </LinearLayout>
            <!--*************   Location    *************-->

            <RelativeLayout
                android:id="@+id/relativeLocation"
                android:layout_width="wrap_content"
                android:layout_gravity="left"
                android:paddingTop="@dimen/_3sdp"
                android:visibility="gone"
                android:layout_marginLeft="30dp"
                android:paddingBottom="@dimen/_2sdp"
                android:paddingLeft="@dimen/_2sdp"
                android:paddingRight="@dimen/_6sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:background="@drawable/total_suppot_bg"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/locationIcon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginHorizontal="5dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/location_icon"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/locationName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:layout_toRightOf="@+id/locationIcon"
                    android:text="1505 GT Road 1789"
                    android:textColor="@color/white"
                    android:textFontWeight="300"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </RelativeLayout>
            <!--*************   Tags   *************-->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerViewInProfileTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp" />

            <!--*************   Total Donation    *************-->

            <RelativeLayout
                android:id="@+id/relativeDonation"
                android:layout_width="wrap_content"
                android:layout_gravity="left"
                android:paddingTop="@dimen/_3sdp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp"
                android:paddingBottom="@dimen/_2sdp"
                android:paddingHorizontal="@dimen/_6sdp"
                android:background="@drawable/total_suppot_bg"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/total_donation_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:text="Total Raised"
                    android:textColor="@color/white"
                    android:textFontWeight="300"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/supportedImage"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_toRightOf="@+id/total_donation_tv"
                    android:layout_marginHorizontal="5dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/support_icon"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/total_donation_tvInOtherUserProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:layout_toRightOf="@+id/supportedImage"
                    android:text="$0"
                    android:textColor="@color/white"
                    android:textFontWeight="300"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/noto_sans"
                android:gravity="left"
                android:text="$0"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />
            <!--*************   Description Text    *************-->
            <TextView
                android:id="@+id/shortBioTVInOtherUserProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/noto_sans"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/HideSelf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/FollowButtonInOtherUserProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/follow_bg"
                    app:cardCornerRadius="12dp">

                    <TextView
                        android:id="@+id/FollowTextInOtherUserProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="8dp"
                        android:fontFamily="@font/noto_sans"
                        android:gravity="center"
                        android:text="Follow"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/MessageButtonInOtherUserProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/GreyColor"
                    app:cardCornerRadius="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="8dp"
                        android:fontFamily="@font/noto_sans"
                        android:gravity="center"
                        android:text="Message"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <!--*************   Follower Layout    *************-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/WhiteColor">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:background="@color/WhiteColor"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="3">
                    <!--*************   Post Layout    *************-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/PostsCountInOtherUserProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/noto_sans"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textFontWeight="700"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/noto_sans"
                            android:gravity="center"
                            android:text="Posts"
                            android:textColor="@color/light_grey"
                            android:textFontWeight="300"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <!--*************   Followers Layout    *************-->
                    <LinearLayout
                        android:id="@+id/FollowersLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/FollowersCountInOtherUserProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/noto_sans"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textFontWeight="700"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/FollowersTextInOtherUserProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/noto_sans"
                            android:gravity="center"
                            android:text="Followers"
                            android:textColor="@color/light_grey"
                            android:textFontWeight="300"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <!--*************   Following Layout    *************-->
                    <LinearLayout
                        android:id="@+id/FollowingLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/FollowingCountInOtherUserProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/noto_sans"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textFontWeight="700"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/noto_sans"
                            android:gravity="center"
                            android:text="Following"
                            android:textColor="@color/light_grey"
                            android:textFontWeight="300"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/post_etc_tab_bar_view"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerViewInProfileInOtherUserProfile"
                android:layout_width="match_parent"
                android:scrollbars="none"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>