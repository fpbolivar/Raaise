<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".Home.Fragments.OtherUserProfileActivity">
    <!--*************   Top Bar    *************-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/BackInOtherUserProfile"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/backarrow"
            app:tint="@color/white" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/BackInOtherUserProfile"
            app:layout_constraintLeft_toRightOf="@id/BackInOtherUserProfile"
            android:adjustViewBounds="true"
            android:src="@drawable/splash_logo" />
        
        <ImageView
            android:id="@+id/more_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/BackInOtherUserProfile"
            app:layout_constraintBottom_toBottomOf="@id/BackInOtherUserProfile"
            android:layout_marginEnd="20dp"
            android:src="@drawable/more_options_btns"
            android:rotation="90"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!--*************   Profile Image    *************-->
            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="1000dp">

                <ImageView
                    android:id="@+id/ProfileImageInOtherUserProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:adjustViewBounds="true"
                    android:background="@color/black"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder" />
            </androidx.cardview.widget.CardView>
            <!--*************   Name With Badge    *************-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/UserNameInProfileInOtherUserProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/noto_sans"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/Verification_BadgeInOtherUserProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/verification_badge"
                    android:visibility="gone" />
            </LinearLayout>
            <!--*************   Total Donation    *************-->
            <TextView
                android:id="@+id/total_donation_tvInOtherUserProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/noto_sans"
                android:gravity="center"
                android:text="Total Donated"
                android:textColor="@color/white"
                android:textFontWeight="300"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/noto_sans"
                android:gravity="center"
                android:text="$0"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />
            <!--*************   Description Text    *************-->
            <TextView
                android:id="@+id/shortBioTVInOtherUserProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/noto_sans"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/DarkGrey"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/HideSelf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/FollowButtonInOtherUserProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/LogoGreyColor"
                    app:cardCornerRadius="12dp">

                    <TextView
                        android:id="@+id/FollowTextInOtherUserProfile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="8dp"
                        android:fontFamily="@font/noto_sans"
                        android:gravity="center"
                        android:text="Follow"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/MessageButtonInOtherUserProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/GreyColor"
                    app:cardCornerRadius="12dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="8dp"
                        android:fontFamily="@font/noto_sans"
                        android:gravity="center"
                        android:text="Message"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <!--*************   Follower Layout    *************-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:background="@color/black">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:background="@color/black"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <!--*************   Post Layout    *************-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/PostsCountInOtherUserProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/noto_sans"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textFontWeight="700"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/noto_sans"
                            android:gravity="center"
                            android:text="Posts"
                            android:textColor="@color/light_grey"
                            android:textFontWeight="300"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <!--*************   Followers Layout    *************-->
                    <LinearLayout
                        android:id="@+id/FollowersLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/FollowersCountInOtherUserProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/noto_sans"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textFontWeight="700"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/FollowersTextInOtherUserProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/noto_sans"
                            android:gravity="center"
                            android:text="Followers"
                            android:textColor="@color/light_grey"
                            android:textFontWeight="300"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                    <!--*************   Following Layout    *************-->
                    <LinearLayout
                        android:id="@+id/FollowingLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/FollowingCountInOtherUserProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/noto_sans"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textFontWeight="700"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/noto_sans"
                            android:gravity="center"
                            android:text="Following"
                            android:textColor="@color/light_grey"
                            android:textFontWeight="300"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerViewInProfileInOtherUserProfile"
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="4dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>