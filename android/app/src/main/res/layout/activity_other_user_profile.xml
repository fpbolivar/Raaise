<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true"
    tools:context=".Home.Fragments.OtherUserProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--*************   Top Bar    *************-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:adjustViewBounds="true"
                android:src="@drawable/splash_logo" />

            <!--            <ImageView-->
            <!--                android:id="@+id/Add_Video_In_Profile"-->
            <!--                android:layout_width="30dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="30dp"-->
            <!--                android:layout_marginRight="20dp"-->
            <!--                app:tint="@color/white"-->
            <!--                android:layout_toStartOf="@+id/Settings_In_Profile"-->
            <!--                android:adjustViewBounds="true"-->
            <!--                android:src="@drawable/add_video_in_profile" />-->

            <!--            <ImageView-->
            <!--                android:id="@+id/Settings_In_Profile"-->
            <!--                android:layout_width="30dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_alignParentEnd="true"-->
            <!--                android:layout_marginTop="30dp"-->
            <!--                android:layout_marginRight="30dp"-->
            <!--                android:adjustViewBounds="true"-->
            <!--                android:src="@drawable/setting_in_profile"-->
            <!--                app:tint="@color/white" />-->

        </RelativeLayout>
        <!--*************   Profile Image    *************-->
        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="1000dp">

            <ImageView
                android:id="@+id/ProfileImageInOtherUserProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:adjustViewBounds="true"
                android:background="@color/black"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>
        <!--*************   Name With Badge    *************-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/UserNameInProfileInOtherUserProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/noto_sans"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/Verification_BadgeInOtherUserProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/verification_badge"
                android:visibility="gone" />
        </LinearLayout>
        <!--*************   Total Donation    *************-->
        <TextView
            android:id="@+id/total_donation_tvInOtherUserProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/noto_sans"
            android:gravity="center"
            android:text="Total Donated"
            android:textColor="@color/white"
            android:textFontWeight="300"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/noto_sans"
            android:gravity="center"
            android:text="$0"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone" />
        <!--*************   Description Text    *************-->
        <TextView
            android:id="@+id/shortBioTVInOtherUserProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/noto_sans"
            android:gravity="center"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/DarkGrey"
            android:textSize="12sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:id="@+id/FollowButtonInOtherUserProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:backgroundTint="@color/LogoGreyColor"
                app:cardCornerRadius="12dp">

                <TextView
                    android:id="@+id/FollowTextInOtherUserProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="8dp"
                    android:fontFamily="@font/noto_sans"
                    android:gravity="center"
                    android:text="Follow"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/MessageButtonInOtherUserProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:backgroundTint="@color/GreyColor"
                app:cardCornerRadius="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginVertical="8dp"
                    android:fontFamily="@font/noto_sans"
                    android:gravity="center"
                    android:text="Message"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <!--*************   Follower Layout    *************-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:background="@color/black">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:background="@color/black"
                android:orientation="horizontal"
                android:weightSum="3">
                <!--*************   Post Layout    *************-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/PostsCountInOtherUserProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/noto_sans"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textFontWeight="700"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/noto_sans"
                        android:gravity="center"
                        android:text="Posts"
                        android:textColor="@color/light_grey"
                        android:textFontWeight="300"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>
                <!--*************   Followers Layout    *************-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/FollowersCountInOtherUserProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/noto_sans"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textFontWeight="700"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/noto_sans"
                        android:gravity="center"
                        android:text="Followers"
                        android:textColor="@color/light_grey"
                        android:textFontWeight="300"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>
                <!--*************   Following Layout    *************-->
                <LinearLayout
                    android:id="@+id/followers_list_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/FollowingCountInOtherUserProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/noto_sans"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textFontWeight="700"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/noto_sans"
                        android:gravity="center"
                        android:text="Following"
                        android:textColor="@color/light_grey"
                        android:textFontWeight="300"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerViewInProfileInOtherUserProfile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="4dp"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</ScrollView>