<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginEnd="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/black"
    android:background="@color/black">

    <FrameLayout
        android:id="@+id/img_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.cardview.widget.CardView

            android:layout_width="55dp"
            android:layout_height="55dp"
            app:cardCornerRadius="55dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/users_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>
    </FrameLayout>


    <ImageView
        android:id="@+id/remove_user_iv"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:padding="6dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/camera_button_inner_shell"
        android:src="@drawable/close_icon"
        app:layout_constraintRight_toRightOf="@id/img_container"
        app:layout_constraintTop_toTopOf="@id/img_container"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="User Name"
        android:textColor="@color/white"
        android:textSize="10sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>