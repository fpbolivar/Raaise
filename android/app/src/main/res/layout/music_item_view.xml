<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/donation_raised_bg">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="50dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/singer_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                     />


            </androidx.cardview.widget.CardView>
            <!--            <ImageView-->
            <!--                android:id="@+id/singer_image"-->
            <!--                android:layout_width="40dp"-->
            <!--                android:layout_height="40dp"-->
            <!--                android:src="@color/Green"-->
            <!--                app:layout_constraintLeft_toLeftOf="parent"-->
            <!--                app:layout_constraintTop_toTopOf="parent"-->
            <!--                app:layout_constraintBottom_toBottomOf="parent"-->
            <!--                android:layout_marginStart="1dp"-->
            <!--                android:layout_marginTop="12dp"-->
            <!--                android:layout_marginBottom="12dp"/>-->

            <TextView
                android:id="@+id/song_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/noto_sans"
                android:maxLines="1"
                android:text="Take Me Home"
                android:textColor="#D9FFFFFF"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/cardView"
                app:layout_constraintTop_toTopOf="@id/cardView" />

            <TextView
                android:id="@+id/singer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/noto_sans"
                android:text="John Doe"
                android:textColor="@color/low_light_grey"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="@id/cardView"
                app:layout_constraintLeft_toRightOf="@id/cardView" />

            <View
                android:id="@+id/seperator"
                android:layout_width="1.5dp"
                android:layout_height="0dp"
                android:layout_marginStart="6dp"
                android:background="@color/low_light_grey"
                app:layout_constraintBottom_toBottomOf="@id/singer_name"
                app:layout_constraintLeft_toRightOf="@id/singer_name"
                app:layout_constraintTop_toTopOf="@id/singer_name" />

            <TextView
                android:id="@+id/genreType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:fontFamily="@font/noto_sans"
                android:text="Bass"
                android:textColor="@color/low_light_grey"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="@id/singer_name"
                app:layout_constraintLeft_toRightOf="@id/seperator"
                app:layout_constraintTop_toTopOf="@id/singer_name" />

            <TextView
                android:id="@+id/musicTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="3 Min"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/cardView"
                app:layout_constraintRight_toRightOf="parent" />

            <ImageView
                android:id="@+id/play_pause_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="1dp"
                android:src="@drawable/play_button_svg"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/song_name" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_music"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginEnd="25dp"
                android:adjustViewBounds="true"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/song_name"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/music_lottie" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>