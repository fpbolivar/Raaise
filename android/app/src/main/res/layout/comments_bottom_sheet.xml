<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500dp">

    <TextView
        android:id="@+id/comments_count_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comments"
        android:padding="6dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bottom_dialog_dark"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height=".5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/comments_count_tv"
        android:background="@color/TextColor1"/>

    <ImageView
        android:id="@+id/imageClose"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/close_icon"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/comments_count_tv"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/commentsRV"
        android:minHeight="100dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/reply_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reply_container"
        android:background="@drawable/rounded_white_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <RelativeLayout
            android:id="@+id/ReplyToNameLayout"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/EditTextInCommentsBottomDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/RandomId"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/noto_sans"
                android:text="Reply To: "
                android:textColor="#606060" />

            <TextView
                android:id="@+id/NameInReply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="10dp"
                android:layout_toRightOf="@+id/RandomId"
                android:fontFamily="@font/noto_sans"
                android:text="maninder"
                android:textColor="#606060" />

            <ImageView
                android:id="@+id/imageCloseInReply"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:layout_marginEnd="20dp"
                android:src="@drawable/close_icon"
                app:tint="@color/white" />
        </RelativeLayout>

        <EditText
            android:id="@+id/EditTextInCommentsBottomDialog"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/sendButtonInCommentSheet"
            android:layout_marginEnd="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:textColorHint="#606060"
            android:textSize="14sp"
            android:hint="Add comment..."
            android:background="@color/black"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/sendButtonInCommentSheet"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:text="Send"
            android:gravity="center_vertical"
            android:textColor="@color/LogoGreyColor"
            app:layout_constraintTop_toTopOf="@id/EditTextInCommentsBottomDialog"
            app:layout_constraintBottom_toBottomOf="@id/EditTextInCommentsBottomDialog"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>