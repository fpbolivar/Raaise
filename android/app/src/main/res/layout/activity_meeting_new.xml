<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black">
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/chat_container"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.9"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <live.videosdk.rtc.android.VideoView
                        android:id="@+id/user_video_view"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvParticipants"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        tools:listitem="@layout/item_remote_peer"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_participents"
            android:backgroundTint="@color/black"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvParticipants2"
                android:layout_marginTop="4dp"
                tools:listitem="@layout/item_remote_peer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_width="75dp"
                app:cardCornerRadius="75dp"
                android:layout_height="8dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="@color/DarkGrey"
                android:backgroundTint="@color/DarkGrey"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/live_chat_rv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintHeight_max="280dp"
                android:background="@null"
                app:stackFromEnd="true"
                android:layout_marginBottom="6dp"
                tools:listitem="@layout/live_chat_item"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnMic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:cardCornerRadius="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp">

        <LinearLayout
            android:id="@+id/mic_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mic_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                app:tint="@color/black"
                android:src="@drawable/mic_on"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnLeave"
        app:layout_constraintLeft_toLeftOf="@id/btnWebcam"
        app:layout_constraintTop_toBottomOf="@id/btnWebcam"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:cardCornerRadius="55dp"
        android:layout_marginTop="22dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/Red"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:src="@drawable/ic_call_end"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnWebcam"
        app:layout_constraintLeft_toLeftOf="@id/btnMic"
        app:layout_constraintTop_toBottomOf="@id/btnMic"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:cardCornerRadius="55dp"
        android:layout_marginTop="22dp">

        <LinearLayout
            android:id="@+id/webcam_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/webcam_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                app:tint="@color/black"
                android:src="@drawable/camera_on"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chat_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="22dp"
            android:backgroundTint="@color/DarkGrey">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/send_chat_et"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/send_chat_btn"
                    android:layout_width="0dp"
                    android:layout_marginStart="22dp"
                    android:layout_height="50dp"
                    android:layout_gravity="top"


                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Say something..."
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/send_chat_btn"
                    app:layout_constraintTop_toTopOf="@id/send_chat_btn"
                    app:layout_constraintBottom_toBottomOf="@id/send_chat_btn"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:src="@drawable/svg_sendbutton"
                    app:tint="@color/white" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>





    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>