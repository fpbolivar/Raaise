<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Settings.Payments.PaymentMethods">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WhiteColor"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/MainLayoutInPayment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/PayButton"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/BackInSignUp"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:adjustViewBounds="true"
                android:src="@drawable/backarrow"
                app:tint="@color/white" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:id="@+id/TextInForgetPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans"
                        android:text="Payment "
                        android:textColor="@color/TextColor"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans"
                        android:text="Methods"
                        android:textColor="@color/LogoGreyColor"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView

                    android:id="@+id/AddNewCardInPaymentMethods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/noto_sans"
                    android:text="Add New Card"
                    android:textColor="@color/LogoGreyColor"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30sp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/noto_sans"
                android:text="When choosing payment methods, please check the accuracy of you information"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/NoCardText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/noto_sans"
                android:gravity="center"
                android:text="Looks like you have no saved cards. click on Add New Card at top to add a new card"
                android:textColor="@color/light_grey"
                android:textSize="13sp"
                android:visibility="gone" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/PaymentCardsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                tools:listitem="@layout/card_single_item" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/PayButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_shape_login"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="Pay"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</ScrollView>