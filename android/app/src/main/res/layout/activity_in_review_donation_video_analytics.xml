<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent"
    tools:context=".Settings.Payments.DonationRaisedFolder.InReview_Donation_Video_Analytics">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WhiteColor"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/BackInInReview"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                android:adjustViewBounds="true"
                android:src="@drawable/backarrow"
                app:tint="@color/white" />

            <ImageView
                android:id="@+id/setting_in_review"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/noto_sans"
                android:src="@drawable/setting_in_review"
                android:text="Withdrawal Donation"
                android:textColor="@color/BlueLinkColor"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/TextInForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BackInSignUp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="Video Analytics"
                android:textColor="@color/TextColor"
                android:textSize="18sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="OVERVIEW"
                android:textColor="@color/BlueColorSettings"
                android:textFontWeight="700"
                android:textSize="12dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/noto_sans"
                    android:text="Total Posts"
                    android:textColor="@color/white"
                    android:textFontWeight="300"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/total_posts_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/noto_sans"
                    android:textColor="@color/white"
                    android:textFontWeight="300"
                    android:textSize="16dp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/noto_sans"
                    android:text="Total Raised"
                    android:textColor="@color/white"
                    android:textFontWeight="300"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/total_raised_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/noto_sans"
                    android:textColor="@color/white"
                    android:textFontWeight="300"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/noto_sans"
                    android:text="Total Withdrawal"
                    android:textColor="@color/white"
                    android:textFontWeight="300"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/claimed_amt_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/noto_sans"
                    android:textColor="@color/white"
                    android:textFontWeight="300"
                    android:textSize="16dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/noto_sans"
                    android:text="Amount to be claimed"
                    android:textColor="@color/white"
                    android:textFontWeight="300"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/to_be_claimed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/noto_sans"
                    android:textColor="#ED7D31"
                    android:textFontWeight="300"
                    android:textSize="16dp" />
            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="14dp"
            android:background="#1AFFFFFF" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/noto_sans"
                android:text="DATE"
                android:textColor="@color/BlueColorSettings"
                android:textFontWeight="700"
                android:textSize="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/noto_sans"
                android:gravity="end"
                android:text="RAISED"
                android:textColor="@color/BlueColorSettings"
                android:textFontWeight="700"
                android:textSize="12dp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/noto_sans"
                android:gravity="end"
                android:text="PENDING"
                android:textColor="@color/BlueColorSettings"
                android:textFontWeight="700"
                android:textSize="12dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="14dp"
            android:background="#1AFFFFFF" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/video_history_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="30dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/claim_now_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Claim Now"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/bg_donation_nobtn"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="20dp"/>

    </LinearLayout>

</ScrollView>