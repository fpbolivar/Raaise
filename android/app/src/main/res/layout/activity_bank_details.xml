<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".Settings.Payments.BankDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/WhiteColor"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/BackInSignUp"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:adjustViewBounds="true"
            android:src="@drawable/backarrow"
            app:tint="@color/white" />

        <LinearLayout
            android:id="@+id/TextInForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BackInSignUp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="Bank "
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="Details"
                android:textColor="@color/LogoGreyColor"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Text1InForgetPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/TextInForgetPassword"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/noto_sans"
                    android:visibility="gone"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce ut varius justo. "
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <EditText
                    android:id="@+id/BankNameET"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/curved_dark_grey_background"
                    android:hint="Account Holder Name"
                    android:inputType="textPersonName"
                    android:paddingStart="20dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/light_grey"
                    android:textColorHint="@color/light_grey"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/BankNameLET"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/curved_dark_grey_background"
                    android:hint="Account Holder Last Name"
                    android:inputType="textPersonName"
                    android:paddingStart="20dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/light_grey"
                    android:textColorHint="@color/light_grey"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/BankNameDOBET"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/curved_dark_grey_background"
                    android:hint="Date of Birth"
                    android:drawableEnd="@drawable/calender"
                    android:inputType="textPersonName"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/light_grey"
                    android:textColorHint="@color/light_grey"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/BankAccountIdET"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/curved_dark_grey_background"
                    android:hint="Account ID"
                    android:inputType="textPersonName"
                    android:paddingStart="20dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/light_grey"
                    android:textColorHint="@color/light_grey"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/AccountNumberET"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/curved_dark_grey_background"
                    android:hint="Account Number"
                    android:inputType="phone"
                    android:paddingHorizontal="20dp"
                    android:paddingStart="20dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/light_grey"
                    android:textColorHint="@color/light_grey"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/ConfirmAccountNumberET"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/curved_dark_grey_background"
                    android:hint="Confirm Account number"
                    android:inputType="phone"
                    android:paddingStart="20dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/light_grey"
                    android:textColorHint="@color/light_grey"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/RoutingNumberET"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/curved_dark_grey_background"
                    android:hint="Routing Number"
                    android:inputType="phone"
                    android:paddingStart="20dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/light_grey"
                    android:textColorHint="@color/light_grey"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/CityET"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/curved_dark_grey_background"
                        android:hint="City"
                        android:inputType="text"
                        android:paddingStart="20dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        android:textColor="@color/light_grey"
                        android:textColorHint="@color/light_grey"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/StateET"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/curved_dark_grey_background"
                        android:hint="State"
                        android:inputType="text"
                        android:paddingStart="20dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        android:textColor="@color/light_grey"
                        android:textColorHint="@color/light_grey"
                        android:textSize="14sp" />

                </LinearLayout>

                <EditText
                    android:id="@+id/AddressET"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/curved_dark_grey_background"
                    android:hint="Address"
                    android:inputType="text"
                    android:paddingStart="20dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/light_grey"
                    android:textColorHint="@color/light_grey"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/PostalCodeET"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/curved_dark_grey_background"
                    android:hint="Postal Code"
                    android:inputType="phone"
                    android:paddingStart="20dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/light_grey"
                    android:textColorHint="@color/light_grey"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/BankLastFourSSN"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/curved_dark_grey_background"
                    android:hint="Last 4-Digits of SSN"
                    android:maxLength="4"
                    android:inputType="number"
                    android:paddingStart="20dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/light_grey"
                    android:textColorHint="@color/light_grey"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/PhoneNumberNumberET"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/curved_dark_grey_background"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:paddingStart="20dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:textColor="@color/light_grey"
                    android:textColorHint="@color/light_grey"
                    android:textSize="14sp" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/SaveBankDetailsButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/ConfirmPasswordEditTextInChangePassword"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="50dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_shape_login"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto_sans"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>