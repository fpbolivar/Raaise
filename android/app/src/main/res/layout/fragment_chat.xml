<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteColor">

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/backarrow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/chatPersonNameName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/noto_sans"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="22dp"
        app:layout_constraintStart_toEndOf="@+id/backBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/videoCallBtn"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:src="@drawable/svg_video_call"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="25dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/seperator"
        app:layout_constraintLeft_toLeftOf="@id/backBtn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backBtn">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ShowHideProfile"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="100dp">

                    <ImageView
                        android:id="@+id/chatPersonIV"
                        android:layout_width="120dp"
                        android:layout_height="120dp"

                        android:scaleType="fitCenter"
                        android:src="@drawable/placeholder"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/chatPersonName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/noto_sans"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/chatPersonIV" />

                <RelativeLayout
                    android:id="@+id/relativeDonation"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingHorizontal="@dimen/_6sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:background="@drawable/total_suppot_bg"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/total_donation_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans"
                        android:text="Total Supported"
                        android:textColor="@color/white"
                        android:textFontWeight="300"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/supportedImage"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_toRightOf="@+id/total_donation_tv"
                        android:layout_marginHorizontal="5dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/support_icon"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/totalDonationHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans"
                        android:layout_toRightOf="@+id/supportedImage"
                        android:text="$0"
                        android:textColor="@color/white"
                        android:textFontWeight="300"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/ShortBioOfChatUser"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/noto_sans"
                    android:gravity="center"
                    android:textColor="@color/DarkGrey"
                    android:textSize="10sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/totalDonationHeading" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chatRV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="7dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/ShortBioOfChatUser"
                app:layout_constraintRight_toRightOf="@id/ShortBioOfChatUser"
                app:layout_constraintTop_toBottomOf="@id/ShortBioOfChatUser" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/seperator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:background="@color/DarkGrey"
        android:backgroundTint="@color/DarkGrey"
        app:layout_constraintBottom_toTopOf="@id/sendChatLL"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:id="@+id/sendChatLL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="22dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/settings_block_bg"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_gravity="top"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/send_chat_et"
                android:layout_width="@dimen/_230sdp"
                android:layout_height="50dp"
                android:hint="Message..."
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:paddingStart="@dimen/_6sdp"
                android:background="@color/Transparent"
                android:textColor="@color/white"
                android:textColorHint="@color/DarkGrey"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/send_chat_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/send_chat_et"
                android:padding="10dp"
                android:src="@drawable/svg_sendbutton"
                app:tint="@color/LogoGreyColor" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>