<resources>
    <!-- Base application theme. -->
    <style name="Theme.ScripTube" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/LogoGreyColor</item>
        <item name="colorSecondaryVariant">@color/LogoGreyColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/WhiteColor</item>
        <item name="android:navigationBarColor">@color/WhiteColor</item>
        <item name="android:windowNoTitle">true</item>
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="tabIndicator">@drawable/custom_tablayout_indicator1</item>
        <item name="tabTextAppearance">@style/Select_Text_Appearance_TabView</item>

    </style>

    <style name="Select_Text_Appearance_TabView" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>

    </style>
</resources>